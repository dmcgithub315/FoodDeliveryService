<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_white">

    <TextView
        android:id="@+id/header_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/Header_Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profile_user_oldpwd"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"

        android:background="@drawable/if_whitebg"
        app:boxBackgroundColor="@color/white_white"
        app:boxStrokeColor="@color/black_black"

        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/black_black"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:ems="15"

        android:hint="Old Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_welcome" />

    <EditText
        android:id="@+id/profile_user_newpwd"
        android:layout_width="325dp"
        android:layout_height="60dp"

        android:background="@drawable/if_whitebg"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/black_black"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:ems="15"

        android:hint="New Password"
        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_oldpwd" />

    <EditText
        android:id="@+id/profile_user_newpwdCf"
        android:layout_width="325dp"
        android:layout_height="60dp"

        android:background="@drawable/if_whitebg"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/black_black"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:ems="15"

        android:hint="Confirm New Password"
        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_newpwd" />
    <Button
        android:id="@+id/button_changepwd"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"

        android:backgroundTint="@color/pff_red_red"

        android:ems="15"
        android:text="Change Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_newpwdCf" />



</androidx.constraintlayout.widget.ConstraintLayout>