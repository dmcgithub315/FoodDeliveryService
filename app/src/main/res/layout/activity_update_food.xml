<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateFood"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/general_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Product"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/black_black"
            android:textSize="28sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/activity_update_food_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/activity_update_food_chooseBtn"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"

                android:background="@drawable/background_button"

                android:textColor="@color/black_black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Choose" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ID" />

            <EditText
                android:id="@+id/activity_update_food__editText_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name" />

            <EditText
                android:id="@+id/activity_update_food__editText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Category" />

            <EditText
                android:id="@+id/activity_update_food__editText_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Price" />

            <EditText
                android:id="@+id/activity_update_food__editText_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:inputType="number"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Detail" />

            <EditText
                android:id="@+id/activity_update_food__editText_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detail"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                android:gravity="start|top"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Create At" />

            <EditText
                android:id="@+id/activity_update_food__editText_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Created At"
                android:inputType="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Update At" />

            <EditText
                android:id="@+id/activity_update_food__editText_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Updated At"
                android:inputType="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_update_food_saveBtn"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"

                android:background="@drawable/background_button"

                android:textColor="@color/black_black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Save" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
